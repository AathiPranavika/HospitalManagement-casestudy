<!DOCTYPE hibernate-configuration PUBLIC

		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"

		"https://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
 
<hibernate-configuration>
 
	<session-factory>

<!-- Database connection properties - Driver, URL, user, password -->
<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Hospital_caseStudy</property>
<property name="hibernate.connection.username">root</property>
<property name="hibernate.connection.password">Aathi@2003</property>


<!-- this property tells hibernate to do all ddl operations like create,update automatically by it self-->
<!-- when u write create instead of update in the below property every time u run it will create same table multiple times-->
<property name="hbm2ddl.auto">update</property>

<!-- tells hibernate to be ready to connect with which kind of db->sql8-->
<property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>

<!--u can see all auto generated queries by hibernate -->
<property name="show_sql">true</property>


<!-- Mapping model/entity class having annotations   -->
<!-- for which classes table should be created-->

<mapping class="com.hexaware.hospital_manage.entity.User"/>
<mapping class="com.hexaware.hospital_manage.entity.Doctor"/>
<mapping class="com.hexaware.hospital_manage.entity.Patient"/>
<mapping class="com.hexaware.hospital_manage.entity.Appointment"/>
<mapping class="com.hexaware.hospital_manage.entity.MedicalRecord"/>
<mapping class="com.hexaware.hospital_manage.entity.Prescription"/>
<mapping class="com.hexaware.hospital_manage.entity.Message"/>


 <!-- give all classes one by one-->
	</session-factory>
 
 
</hibernate-configuration>								
 
 
 <!-- this file name should always bee hibernate.cfg.xml-->
